             value="{{ item.name }}"
             data-key="{{ key }}"
             {{ "checked" if item.checked else "" }}>
      <label class="custom-control-label" for="{{ key }}-{{ item.text }}">
            {{ item.text }}
            {% if item.desc %}
              <p class="lead small font-italic">{{ item.desc | safe }}</p>
            {% endif %}
          </label>
          </label>
    </div>
  {% endfor %}
</div>

