{% if radio %}
  <div class="form-group ml-3" id="form-{{ key }}">
    <h4>{{ text }}: </h4>
    {% if desc %}
      <p class="lead small">{{ desc | safe }}</p>
    {% endif %}
    
    {% for item in items %}
      <div class="custom-control custom-radio custom-control-inline-not {{ item.style }}">
        <input type="radio" class="custom-control-input"
               id="{{ key }}-{{ item.name }}"
               name="{{ key }}"
               value="{{ item.name }}"
               data-key="{{ key }}"
               {{ "checked" if item.checked else "" }}>
        <label class="custom-control-label" for="{{ key }}-{{ item.name }}">
          {{ item.text }}
          {% if item.desc %}
            <p class="lead small font-italic">{{ item.desc | safe }}</p>
          {% endif %}
        </label>
      </div>
    {% endfor %}
  </div>
{% else %}
<div class="form-group ml-3" id="form-{{ key }}">
